<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".record_1_Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/backspace_Btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/backspace"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="가나다라마바사"
                                android:layout_gravity="center"
                                android:textColor="#ffffff"
                                android:textSize="30dp"/>
                            <TextView
                                android:id="@+id/record_1_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="기록없음"
                                android:textSize="25dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/emotion_1_ImageView"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/emotion_nomal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="아자차카타파하"
                                android:layout_gravity="center"
                                android:textColor="#ffffff"
                                android:textSize="30dp"/>
                            <TextView
                                android:id="@+id/record_2_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="기록없음"
                                android:textSize="25dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/emotion_2_ImageView"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/emotion_nomal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="바른손글씨"
                                android:layout_gravity="center"
                                android:textColor="#ffffff"
                                android:textSize="30dp"/>
                            <TextView
                                android:id="@+id/record_3_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="기록없음"
                                android:textSize="25dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/emotion_3_ImageView"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/emotion_nomal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="악필교정"
                                android:layout_gravity="center"
                                android:textColor="#ffffff"
                                android:textSize="30dp"/>
                            <TextView
                                android:id="@+id/record_4_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="기록없음"
                                android:textSize="25dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/emotion_4_ImageView"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/emotion_nomal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="교정기억법"
                                android:layout_gravity="center"
                                android:textColor="#ffffff"
                                android:textSize="30dp"/>
                            <TextView
                                android:id="@+id/record_5_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="기록없음"
                                android:textSize="25dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/emotion_5_ImageView"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/emotion_nomal"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/AdView_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:orientation="horizontal">
            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>